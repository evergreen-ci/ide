[Unit]
Description=Serve VS Code over the network
ConditionFileIsExecutable=/opt/code-server/code-server

[Service]
StartLimitInterval=5
StartLimitBurst=10
ExecStart=/opt/code-server/code-server --auth none --host="0.0.0.0" --port=2021 --disable-telemetry --disable-updates --extensions-dir=/opt/code-server/extensions --user-data-dir=/opt/code-server
User=ubuntu

LimitMEMLOCK=infinity
LimitNOFILE=infinity
LimitNPROC=infinity
LimitAS=infinity

Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
